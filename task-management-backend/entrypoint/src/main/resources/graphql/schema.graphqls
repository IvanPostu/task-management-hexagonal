scalar Instant
scalar LocalDate
scalar Upload

type Query {
    getEmployee(id: ID) : Employee
    getAllStores: [Store]
}


type FileInfo {
  filename: String!
  size: Int!
  contentType: String
}

type Mutation {
  singleUpload(file: Upload!): FileInfo!
  # multipleUpload(files: [Upload!]!): [FileInfo!]!
}

type Store {
    id: ID!
    name: String
    city: String
    createDate: Instant!
    dueDate: LocalDate!
}

type Employee {
    id: ID!
    name: String!
    location: Store
}
